{
  "manifest_version": 3,
  "name": "RhinoSpider",
  "version": "3.2.19",
  "description": "RhinoSpider Chrome Extension",
  "permissions": [
    "storage",
    "tabs",
    "downloads"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://*.ic0.app/*",
    "https://icp0.io/*",
    "https://identity.ic0.app/*",
    "https://ic-proxy.rhinospider.com/*",
    "http://ic-proxy.rhinospider.com/*",
    "https://search-proxy.rhinospider.com/*",
    "http://search-proxy.rhinospider.com/*",
    "http://143.244.133.154:3001/*",
    "http://143.244.133.154:3002/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "RhinoSpider",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pages/*",
        "assets/*",
        "src/*",
        "certificate-patch.js",
        "connection-test.html",
        "node_modules/@dfinity/*",
        "declarations/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}