{
    "manifest_version": 3,
    "name": "RhinoSpider",
    "version": "1.2.8",
    "description": "RhinoSpider browser extension",
    "permissions": [
        "storage",
        "tabs",
        "identity"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*",
        "https://identity.ic0.app/*",
        "https://icp0.io/*",
        "https://ic0.app/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "pages/*.html",
                "assets/*",
                "icons/*"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}
